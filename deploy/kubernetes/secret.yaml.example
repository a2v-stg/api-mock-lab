# Example Secret - DO NOT commit actual secrets to git!
# Create actual secret with: kubectl create secret generic mocklab-secret --from-literal=...

apiVersion: v1
kind: Secret
metadata:
  name: mocklab-secret
  namespace: mocklab
type: Opaque
stringData:
  # Database credentials (use AWS Secrets Manager in production)
  DATABASE_URL: "postgresql://mocklab:CHANGE_THIS_PASSWORD@your-rds-endpoint.us-east-1.rds.amazonaws.com:5432/mocklab"
  
  # Application secret key (generate with: openssl rand -hex 32)
  SECRET_KEY: "CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_KEY"
  
  # Redis URL for session storage (optional - PostgreSQL is used by default)
  # Sessions are stored in PostgreSQL by default. Set REDIS_URL only if you want to use Redis.
  # Format: redis://[password@]host:port[/db]
  # Examples:
  #   - redis://localhost:6379/0 (local Redis)
  #   - redis://:password@your-elasticache-endpoint.cache.amazonaws.com:6379/0 (AWS ElastiCache)
  #   - redis://redis-service.mocklab.svc.cluster.local:6379/0 (Kubernetes service)
  # REDIS_URL: "redis://redis-service.mocklab.svc.cluster.local:6379/0"
  
  # Alternative: use AWS RDS IAM authentication
  # DB_HOST: "your-rds-endpoint.us-east-1.rds.amazonaws.com"
  # DB_PORT: "5432"
  # DB_NAME: "mocklab"
  # DB_USER: "mocklab"
  # DB_PASSWORD: "secure_password_here"
